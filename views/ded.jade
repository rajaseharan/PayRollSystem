        function Calc(className){
            var elements = document.getElementsByClassName(className);
            for(var i = 0; i < elements.length; ++i){
                pf=(parseInt(elements[i].value))*(12/100);
                esi=(parseInt(elements[i].value))*(10/100);
                td=((parseInt(elements[i].value))*12);
                pt=((parseInt(elements[i].value))*(2/100));
                isp=((parseInt(elements[i].value))*(4/100));
                other=((parseInt(elements[i].value))*(3/100));
            }
            if(td < 250000)
            {
                tds=0;
            }
            else if(td>250000 && td<500000)
            {tds= (td*(10/100))/12;}
            else
            {
                tds=(td*(20/100))/12;
            }
            document.form0.pf.value = pf;
            document.form0.esi.value=esi;
            document.form0.tds.value=tds;
            document.form0.pt.value=pt;
            document.form0.ip.value=isp;
            document.form0.oth.value=other;
            document.form0.oth1.value =  pf+esi+pt+tds+other+isp;
        }
